# Video Creation API Environment Variables
# Copy this file to .env and modify as needed

# Domain Configuration (IMPORTANT for production)
DOMAIN=your-domain.com
API_BASE_URL=https://your-domain.com
SSL_ENABLED=true

# Ngrok Configuration (for development/staging)
NGROK_AUTHTOKEN=your_ngrok_auth_token_here
NGROK_URL=your_custom_domain_or_leave_empty

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
MAX_WORKERS=1
MEMORY_LIMIT=2G

# Video Processing Settings
DEFAULT_VIDEO_FPS=24
DEFAULT_VIDEO_CODEC=libx264
DEFAULT_AUDIO_CODEC=aac
DEFAULT_RESOLUTION_WIDTH=1280
DEFAULT_RESOLUTION_HEIGHT=720

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB
UPLOAD_TIMEOUT=300       # 5 minutes

# Security Settings
REQUEST_TIMEOUT=300      # 5 minutes
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Performance Settings
MOVIEPY_TEMP_DIR=/app/tmp
IMAGEIO_FFMPEG_EXE=/usr/bin/ffmpeg

# Production Settings (for docker-compose.prod.yml)
NGINX_MAX_BODY_SIZE=100m
PROMETHEUS_RETENTION=200h

# Database Settings (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/video_db
# REDIS_URL=redis://localhost:6379/0

# Cloud Storage Settings (if needed in future)
